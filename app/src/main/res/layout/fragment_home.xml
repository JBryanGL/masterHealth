<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral10"
    tools:context=".ui.home.HomeFragment">

    <!--<FrameLayout
        android:id="@+id/nav_homee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp">-->

        <ImageView
            android:id="@+id/portadaImageView"
            android:layout_width="411dp"
            android:layout_height="200dp"
            android:background="@drawable/portada"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/perfilImageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/usuario"
            android:src="@drawable/fui_ic_anonymous_white_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/portadaImageView"
            app:layout_constraintEnd_toEndOf="@+id/portadaImageView"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="@+id/portadaImageView"
            app:layout_constraintTop_toTopOf="@+id/portadaImageView"
            app:layout_constraintVertical_bias="0.511" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="529dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/portadaImageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreUsuarioTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Usuario"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="150dp"
                tools:layout_editor_absoluteY="228dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="right"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/editar2"
                    android:gravity="right"
                    android:shadowColor="@color/teal_700">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/genero1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Genero"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="30dp"
                        tools:layout_editor_absoluteY="100dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/edad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="edad"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="29dp"
                        tools:layout_editor_absoluteY="270dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/estatura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="estatura"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="29dp"
                        tools:layout_editor_absoluteY="313dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/peso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="peso"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="122dp"
                        tools:layout_editor_absoluteY="313dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/corporalTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Composición Corporal"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="150dp"
                tools:layout_editor_absoluteY="228dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/grasaTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10.00%"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Porcentaje de grasa corporal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Tu composición corporal es: "
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/composicionTV"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Atlética"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/corporalTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro de agua"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="150dp"
                tools:layout_editor_absoluteY="228dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/ic_bg"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agua"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/objetivoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Objetivo: "
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnMenos"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/menos"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/resultadoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnMas"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/mas"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/modificarObjetivoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modifica tu objetivo"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/corporalTextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medidas corporales"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="150dp"
                tools:layout_editor_absoluteY="228dp" />

            <Button
                android:id="@+id/btnEditarTabla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

        </LinearLayout>
    </ScrollView>

        <Button
            android:id="@+id/btnEditPerfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/lapiz"
            app:layout_constraintBottom_toBottomOf="@+id/perfilImageView"
            app:layout_constraintEnd_toEndOf="@+id/perfilImageView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/perfilImageView"
            app:layout_constraintTop_toTopOf="@+id/perfilImageView"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnEditPortada"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/lapiz"
            app:layout_constraintBottom_toBottomOf="@+id/portadaImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.997"
            app:layout_constraintStart_toStartOf="@+id/portadaImageView"
            app:layout_constraintTop_toTopOf="@+id/portadaImageView"
            app:layout_constraintVertical_bias="1.0" />

    <!--</FrameLayout>-->


</androidx.constraintlayout.widget.ConstraintLayout>